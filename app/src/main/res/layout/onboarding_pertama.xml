<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:padding="30dp">

        <Button
            android:id="@+id/skipBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Lewati"
            android:textSize="20sp"
            android:layout_gravity="end|top"
            android:textColor="@color/black"/>

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/bingung"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi Yang Menyediakan Data Ter-Update"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/darkBrown"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KELUD STATS menyediakan wadah Informasi agar masyarakat dapat mengetahui data statistik Kabupaten Kediri "
            android:layout_marginVertical="20dp"
            android:textAlignment="center"
            android:textColor="@color/darkBrown"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/green_line"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/ellips_grey"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
</LinearLayout>
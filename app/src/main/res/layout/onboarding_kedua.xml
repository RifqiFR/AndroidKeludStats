<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="bottom|center_horizontal"
    android:padding="30dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/senyum"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelud Stats Melayani Anda Setiap Waktu"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/darkBrown"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding2_description"
        android:layout_marginVertical="20dp"
        android:textAlignment="center"
        android:textColor="@color/darkBrown"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ellips_grey"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/green_line"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboardingStartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightBrown"
        app:cornerRadius="10dp"
        android:padding="11dp"
        android:text="Mulai"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:textStyle="bold"/>
</LinearLayout>